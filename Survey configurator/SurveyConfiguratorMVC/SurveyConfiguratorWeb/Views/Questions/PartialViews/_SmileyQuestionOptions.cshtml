@model SurveyConfiguratorWeb.Models.SmileyQuestionOptions

@* number of smileys field *@
<div class="form-group d-flex flex-column gap-1">
    @Html.Label(SharedResources.GlobalStrings.NumberOfSmileys, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.NumberOfSmileyFaces, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NumberOfSmileyFaces, "", new { @class = "text-danger" })
    </div>
</div>

